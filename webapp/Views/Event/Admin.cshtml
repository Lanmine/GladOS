@model IEnumerable<webapp.Models.Event>

@{
    ViewData["Title"] = "Admin";
}

<h1>Events</h1>

<p>
    <a asp-action="Create" class="rounded bg-dark text-black p-1">Lag Event</a>
</p>
<table class="table p-4">
    <thead>
    <tr class="bg-dark text-white rounded p-4">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Archived)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Description)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Start)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.End)
        </th>
        <th>
            Handlinger
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.HumanReadableUrl)
        </th>*@
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr class="bg-secondary text-black rounded" >
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Archived)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.End)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.HumanReadableUrl)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="text-black" >Endre |</a> 
                <a asp-action="Details" asp-route-id="@item.HumanReadableUrl" class="text-black">Detaljer |</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="text-black">Slett</a>
            </td>
        </tr>
    }
    </tbody>
</table>